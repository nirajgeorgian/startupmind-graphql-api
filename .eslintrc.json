{
	"env": {
		"es6": true,
		"node": true
	},

	"extends": ["plugin:prettier/recommended", "prettier/flowtype", "prettier/standard"],

	"parser": "babel-eslint",

	"plugins": ["babel", "flowtype", "prettier"],

	"parserOptions": {
		"ecmaVersion": 2016,
		"sourceType": "module",
		"allowImportExportEverywhere": false
	},

	"rules": {
		"babel/no-invalid-this": 1,
		"comma-dangle": 2,
		"no-cond-assign": 2,
		"no-console": 2,
		"no-debugger": 2,
		"no-empty": 2,
		"semi": [2, "never"],
		"indent": [2, "tab", { "SwitchCase": 1 }],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "never"],
		"max-len": [1, 120, 2],
		"padding-line-between-statements": [2]
	}
}
